<% if @meeting.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@meeting.errors.count, "error") %> prohibited this meeting from being saved:</h2>
    <ul>
    <% @meeting.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_tag url, method: verb do %>
  <div>
    Name: <input type="text" name="name" value="<%= @meeting.name %>">
  </div>
  <div>
    Address: <input type="text" name="address" value="<%= @meeting.address %>">
  </div>
  <div>
    Start time: <input type="datetime-local" name="start_time" value="<%= @meeting.start_time_formatted %>">
  </div>
  <div>
    End time: <input type="datetime-local" name="end_time" value="<%= @meeting.end_time_formatted %>">
  </div>
  <div>
    Notes: <textarea name="notes"><%= @meeting.notes %></textarea>
  </div>
  <div>
    Tags:
    <% Tag.all.each do |tag| %>
      <input type="checkbox" name="tag_ids[]" value="<%= tag.id %>"><%= tag.name %>
    <% end %>
  </div>
  <input type="submit" value="Submit">
<% end %>
