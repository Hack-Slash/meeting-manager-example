<div id="app">
  <h1><a href="/meetings">All meetings</a></h1>
  <div v-for="meeting in meetings">
    <h3><a v-bind:href="'/meetings/' +  meeting.id">{{ meeting.name }}</a></h3>
    <div v-for="tag in meeting.tags">
      <a v-bind:href="'/meetings?tag=' + tag.name">{{ tag.name }}</a>
    </div>
    <p>Address: {{ meeting.address }}</p>
    <p>Start time: {{ meeting.startTime }}</p>
    <p>End time: {{ meeting.endTime }}</p>
  </div>
</div>

